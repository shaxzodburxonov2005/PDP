<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mmm"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Sanjar suvonov"
            android:id="@+id/tv_nameMentors"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/father_tv_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Shuhrat Ugli"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameMentors"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nameMentors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/edit_text"
            android:backgroundTint="#FFB800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/deleted"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="6dp"
            app:cardCornerRadius="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/vector__5_"
                android:layout_width="20sp"
                android:layout_height="20sp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/deleted"
            app:cardCornerRadius="5dp"
            android:backgroundTint="#FF0000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/group__3_"
                android:layout_width="20sp"
                android:layout_height="20sp"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/mmm"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>