<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img"
    android:padding="16dp"
    tools:context=".EnterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cons2"
        android:layout_width="125dp"
        android:padding="10dp"
        android:background="@drawable/shape"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/course"
            android:src="@drawable/online_course_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="50dp"/>
        <TextView

            android:textColor="@color/white"
            android:text="Kurslar"
            android:id="@+id/kurslar"
            app:layout_constraintTop_toBottomOf="@+id/course"
            app:layout_constraintLeft_toLeftOf="@+id/course"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:id="@+id/cons2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cons1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="125dp"
        android:background="@drawable/shape"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/people"
            android:background="@drawable/people_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="45dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"/>
        <TextView

            android:textColor="@color/white"
            android:text="Guruhlar"
            android:id="@+id/guruxlar"
            app:layout_constraintTop_toBottomOf="@+id/people"
            app:layout_constraintLeft_toLeftOf="@+id/people"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/cons3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons1"
        android:background="@drawable/shape"
        android:layout_width="125dp"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/mentorlar"
            android:background="@drawable/group__2_"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="45dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"/>
        <TextView
            android:textColor="@color/white"
            android:text="Mentorlar"
            android:id="@+id/mentor"
            app:layout_constraintTop_toBottomOf="@+id/mentorlar"
            app:layout_constraintLeft_toLeftOf="@+id/mentorlar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>